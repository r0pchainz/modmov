arr=($(find -iname '*.pdf'))
for index in ${!arr[@]}; do
    buzz=($(arr[$i]))
    max=$(pdfinfo $buzz | grep Pages)
    for ((i=0;i<max;i++))
    do
        w=i+1;
        pdftk file.pdf cat $w output.pdf
        name=$(gpw 1 50)
        wame="$name.jpg"
        convert output.pdf $wame
    done
done

